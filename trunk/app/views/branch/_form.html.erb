    <tr>
      <th>
	<label for="id_repo"><%=h _("Repo:")%></label>
      </th>
      <td>
	<%= select :branch, :repository_id, Repository.find(:all, :order => 'id').collect{|r| [r.name, r.id]}, {:include_blank => true} %>
      </td>
    </tr>
    <tr><th><label for="id_category"><%=h _("Category:")%></label></th><td>
	<%= select :branch, :category_id, Category.find(:all, :order => 'id').collect{|c| [c.name, c.id]}, {:include_blank => true} %>
    </td></tr>
    <tr><th><label for="id_name"><%=h _("Name:")%></label></th><td>
	<%= text_field :branch, :name %>
    </td></tr>
    <tr><th><label for="id_url"><%=h _("Url:")%></label></th><td>
	<%= text_field :branch, :uri %>
    </td></tr>
   <tr>
     <th><label for="id_username"><%=h _("Subversion username:")%></label></th><td>
       <%= text_field :repository, :username %>
   </td></tr>
   <tr>
    <th><label for="id_password"><%=h _("Subversion password:")%></label></th><td>
       <%= password_field :repository, :password_base %>
   </td></tr>
